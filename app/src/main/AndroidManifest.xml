<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.pstype_v1">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="PSType"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity
            android:name="com.vk.sdk.VKOpenAuthActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".main.general"
            android:screenOrientation="portrait" />
        <activity
            android:name=".main.register"
            android:screenOrientation="portrait" />
        <activity
            android:name=".main.sign"
            android:screenOrientation="portrait" />
        <activity
            android:name=".main.Maps"
            android:screenOrientation="portrait" />
        <activity
            android:name=".useful.Splash"
            android:screenOrientation="portrait"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".useful.MyPreferenceActivity"
            android:label="Настройки"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="AIzaSyC8uZOn0qeBWqA4kt7BX9OS-9kiPIzWcm0" />

        <activity
            android:name=".main.welcome"
            android:label="@string/title_activity_welcome"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />

        <service
            android:name=".useful.tracking"
            android:enabled="true"
            android:exported="true"
            android:screenOrientation="portrait" />

        <activity
            android:name=".main.Statistics"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".main.profile"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".main.profile_change"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".useful.debugging_log"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".main.addSignup"
            android:screenOrientation="portrait" />
        <activity
            android:name=".testing.accel_test"
            android:screenOrientation="portrait" />
        <activity android:name=".main.tracks"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"/>
    </application>

</manifest>